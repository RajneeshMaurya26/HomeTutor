@{
    ViewBag.Title = "Enquiry";
    Layout = "~/Views/Shared/Adminzone_Comman_Layout.cshtml";
}
@using demoproject.Models
@using System.Data
@{
    if(TempData["msg"] != null)
    {
      <script>
          alert('@TempData["msg"]');
      </script>   
    }
}
<div class="col-sm-12">
    <br />
    <br />
    <h2>Manage Enquiry</h2>
    <hr />
</div>
<div class="12">
 <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header"><i class="fa fa-table"></i> Data Table</div>
            <div class="card-body">
              <div class="table-responsive">
              <table id="default-datatable" class="table table-bordered">
                <thead>
                    <tr>
                <th>S.NO</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mob_Number</th>
                <th>Topic</th>
                <th>Query</th>
                <th>Date_Of_Enquiry</th>
                <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                       <tr>
          @{
              DBManager dm =new DBManager();
              dm.MyCommandText ="Select * from Enquiry order by Id desc";
              DataTable dt = dm.ReadBulkRecord();
              int n=1;
              foreach(DataRow dr in dt.Rows)
              { 
                    <tr>
                    <td>@n</td>
                    <td>@dr["Name"]</td>
                    <td>@dr["Email"]</td>
                    <td>@dr["Mob_Number"]</td>
                    <td>@dr["Topic"]</td>
                    <td>@dr["Query"]</td>
                    <td>@dr["Date_of_Enquiry"]</td>
                    <td><a href="DelEnquiry?n=@dr["Id"]">Delete</a></td>
                    </tr>
                  n++;
              }
              
            }
    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th>S.NO</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mob_Number</th>
                <th>Topic</th>
                <th>Query</th>
                <th>Date_Of_Enquiry</th>
                <th>Manage</th>
                    </tr>
                </tfoot>
            </table>
            </div>
            </div>
          </div>
        </div>
      </div><!-- End Row-->
    </div>