@{
    ViewBag.Title = "MNotification";
    Layout = "~/Views/Shared/Adminzone_Comman_Layout.cshtml";
}

@using demoproject.Models
@using System.Data
@{
    if(ViewBag.msg !=null)
    {
        <script>
            alert('@ViewBag.msg');
        </script>
    }
}
<div class="col-sm-12">
    <br />
    <br />
    <h2>Send Notification</h2>
    <hr />
</div>
<div class="col-sm-12">
<div class="row">
    <div class="col-sm-12" style="min-height:450px;">
    <hr />
        <br />
            <div class="row">
          <div class="col-sm-3"></div>
        <div class="col-sm-6" style="border:2px solid black;background:white;">
            <br />
            @using (Html.BeginForm("MNotification", "Admin", FormMethod.Post, new { enctype = "multipart/Form-data" }))
            {
                <br />
                 @Html.TextArea("NMessage", null, new {@class="form-control ",placeholder="Enter Message",cols="6", rows="6", style="resize:none"})
                <br />
     
                 <input type="submit" value="Notification" class="form-control bt btn btn-info"  />
    
            }
            <br />
        </div>
      <div class="col-sm-3"></div>
      </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <!-- start manage Studymaterial -->
  <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header"><i class="fa fa-table"></i> Manage Notification</div>
            <div class="card-body">
              <div class="table-responsive">
              <table id="default-datatable" class="table table-bordered">
                <thead>
                    <tr>
                <th>SrNo</th>
                <th>Notification Message</th>
                <th>Added Date</th>
                <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                                   <tr>
          @{
              DBManager dm =new DBManager();
              dm.MyCommandText = "Select * from Notification order by Id desc";
              DataTable dt = dm.ReadBulkRecord();
              int n=1;
              foreach(DataRow dr in dt.Rows)
              { 
                    <tr>
                    <td>@n</td>
                    <td>@dr["NMessage"]</td>
                        <td>@dr["Date_Of_Notification"]</td>
                        <td><a href="DelMNotification?p=@dr["Id"]"><span class="btn btn-Danger">Delete</span></a></td>
                    </tr>
                  n++;
              }
              
            }
    </tr>
                    
                </tbody>
                <tfoot>
                    <tr>
                 <th>SrNo</th>
                <th>Notification Message</th>
                <th>Added Date</th>
                <th>Manage</th>
                    </tr>
                </tfoot>
            </table>
            </div>
            </div>
          </div>
        </div>
      </div><!-- End Row-->
@{
    if(ViewBag.Msg!=null)
    {
        <script>alert('@ViewBag.Msg')</script>
    }
}
</div>